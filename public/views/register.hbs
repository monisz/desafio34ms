<div class="container p-3 my-4 bg-light">
  <h2 style="color:blue">Registro de Usuario</h2>
  <form action="/register" method="POST" id="register" >
    <div class="mb-3 mt-3">
      <label for="email" class="form-label">Ingrese su email</label>
      <input type="text" class="form-control" id="email" placeholder="Ingrese su email" name="username" required/><br/>
    </div>
    <div class="mb-3 mt-3">
        <label for="password" class="form-label">Ingrese su constraseña</label>
        <input type="text" class="form-control" id="password" placeholder="Ingrese su contraseña" name="password" required/><br/>
    </div>
    <button type="submit" class="btn btn-primary">Registrarse</button>
  </form>
  <h2 style="color:green">{{registerSuccess}}</h2>
  <br/>
  <form action="/login" method="GET" id="login" >
    <button type="submit" class="btn btn-primary">Ir a Login</button>
  </form>
</div>